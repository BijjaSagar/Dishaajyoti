<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>DishaAjyoti</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>dishaajyoti</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- App Transport Security Settings -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>
	
	<!-- Camera Permission (for future features like document scanning) -->
	<key>NSCameraUsageDescription</key>
	<string>DishaAjyoti needs access to your camera to scan documents for palmistry analysis.</string>
	
	<!-- Photo Library Permission (for profile pictures and document uploads) -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>DishaAjyoti needs access to your photo library to upload images for analysis.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>DishaAjyoti needs permission to save reports and images to your photo library.</string>
	
	<!-- Location Permission (for birth place selection) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>DishaAjyoti needs your location to help you select your birth place accurately.</string>
	
	<!-- Notifications Permission -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
	
	<!-- Face ID / Touch ID Permission (for biometric authentication) -->
	<key>NSFaceIDUsageDescription</key>
	<string>DishaAjyoti uses Face ID to securely authenticate and protect your personal information.</string>
	
	<!-- Prevent Screenshots on Sensitive Screens -->
	<key>UIApplicationExitsOnSuspend</key>
	<false/>
	
	<!-- App Capabilities -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
	
	<!-- Bundle Display Name -->
	<key>CFBundleDisplayName</key>
	<string>DishaAjyoti</string>
	
	<!-- Bundle Identifier -->
	<key>CFBundleIdentifier</key>
	<string>com.dishaajyoti.app</string>
	
	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>12.0</string>
	
	<!-- Status Bar Style -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleLightContent</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	
	<!-- Google Sign-In URL Scheme -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<!-- Reversed client ID from GoogleService-Info.plist -->
				<string>com.googleusercontent.apps.260749666922-REVERSED_CLIENT_ID</string>
			</array>
		</dict>
	</array>
</dict>
</plist>
